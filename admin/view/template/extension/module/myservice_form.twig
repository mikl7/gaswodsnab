					  return {
						  label: item['name'],
						  value: item['category_id']
					  }
				  }));
			  }
		  });
	  },
	  'select': function(item) {
		  $('input[name=\'category\']').val('');

		  $('#service-category' + item['value']).remove();

		  $('#service-category').append('<div id="service-category' + item['value'] + '"><i class="fa fa-minus-circle"></i> ' + item['label'] + '<input type="hidden" name="service_category[]" value="' + item['value'] + '" /></div>');
	  }
  });

  $('#service-category').delegate('.fa-minus-circle', 'click', function() {
	  $(this).parent().remove();
  });

